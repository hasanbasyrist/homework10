<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>List of Movies</title>
  </head>
  <body>
    <h1>List of Movies</h1>
    <p><a href="/movies/add/new">Add new movie</a></p>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Genres</th>
          <th>Year</th>
          <th>Photo</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% movies.forEach((movie) => { %>
          <tr>
            <td><%= movie.title %></td>
            <td><%= movie.genres %></td>
            <td><%= movie.year %></td>
            <td><img src="<%= movie.photo %>" alt="<%= movie.title %>" width="100"></td>
            <td>
              <a href="/movies/<%= movie.id %>">Show</a>
              <a href="/movies/<%= movie.id %>/edit">Edit</a>
              <form action="/movies/<%= movie.id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this movie?');">
                <input type="hidden" name="_method" value="DELETE">
                <input type="submit" value="Delete">
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
