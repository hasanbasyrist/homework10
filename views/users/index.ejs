<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>List of Users</title>
  </head>
  <body>
    <h1>List of Users</h1>
    <table>
      <thead>
        <tr>
          <th>Email</th>
          <th>Gender</th>
          <th>Role</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(function(user) { %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.gender %></td>
            <td><%= user.role %></td>
            <td>
              <a href="/users/<%= user.id %>">Show</a>
              <a href="/users/<%= user.id %>">Edit</a>
              <form action="/users/<%= user.id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this user?');">
                <input type="hidden" name="_method" value="POST">
                <input type="submit" value="Delete">
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
    <p><a href="/users/add/new">Create new user</a></p>
    <p><a href="/">Back to home</a></p>
  </body>
</html>
